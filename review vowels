<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Phonics Practice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      text-align: center;
      padding: 40px;
    }

    #content {
      margin-top: 100px;
    }

    .letter {
      font-size: 100px;
      font-weight: bold;
      margin-bottom: 30px;
    }

    .phoneme {
      font-size: 70px;
      color: #007bff;
      margin-bottom: 30px;
    }

    .words {
      font-size: 60px;
      color: #333;
    }

    button {
      font-size: 20px;
      padding: 10px 20px;
      margin-top: 60px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div id="content">
    <div class="letter" id="letter"></div>
    <div class="phoneme" id="phoneme"></div>
    <div class="words" id="words"></div>
  </div>

  <button onclick="nextItem()">下一项</button>

  <script>
    const items = [
      { letter: 'a', phoneme: '/æ/', words: 'cat, hat' },
      { letter: 'a-e', phoneme: '/eɪ/', words: 'cake, name' },
      { letter: 'e', phoneme: '/e/', words: 'bed, pen' },
      { letter: 'i', phoneme: '/ɪ/', words: 'sit, big' },
      { letter: 'i-e', phoneme: '/aɪ/', words: 'bike, kite' },
      { letter: 'o', phoneme: '/ɒ/', words: 'dog, hot' },
      { letter: 'o-e', phoneme: '/əʊ/', words: 'home, nose' },
      { letter: 'u', phoneme: '/ʌ/', words: 'cup, sun' },
      { letter: 'u-e', phoneme: '/ju:/' , words: 'cube, mute' },
      { letter: 'e-e', phoneme: '/iː/', words: 'these, Pete' },
    ];

    let currentIndex = 0;

    function showItem(index) {
      document.getElementById('letter').textContent = items[index].letter;
      document.getElementById('phoneme').textContent = items[index].phoneme;
      document.getElementById('words').textContent = items[index].words;
    }

    function nextItem() {
      currentIndex = (currentIndex + 1) % items.length;
      showItem(currentIndex);
    }

    // 初始化显示第一项
    showItem(currentIndex);

    // 键盘控制翻页：右箭头或PageDown
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight' || e.key === 'PageDown') {
        nextItem();
      }
    });
  </script>
</body>
</html>

